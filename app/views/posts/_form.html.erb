<div class="container">

<div class="row justify-content-center">
<div class="col-10">
<%= render 'shared/errors' %>
<%= form_with(model: @post,class:"shadow-none p-3 mb-3 bg-dark rounded", local: true) do |f|%>

    <div class="form-group row">
        <%= f.label :title, class:"col-2 col-form-label text-white font-weight-bold" %>
        <div class="col-10">
             <%= f.text_field :title, class:"form-control shadow-sm bg-white rounded",placeholder:"Title for Post" %>
        </div>
    </div>

    <div class="form-group row">
        <%= f.label :description, class:"col-2 col-form-label text-white font-weight-bold" %>
        <div class="col-10">
            <%= f.text_area :description,rows:10, class:"form-control shadow-sm bg-white rounded",placeholder:"Description of Post" %>
        </div>   
    </div>

    <div class="form-check">
        <%= f.check_box :private %>
        <%= f.label :private, class:"col-2 col-form-label text-white font-weight-bold"%>
    </div>

    <div class="form-group row">
        <div>
            <%= f.number_field :user_id, id: :post_user_id, class:"form-control", value: current_user.id, type: :hidden %>
        </div>   
    </div>

    <div class="form-group row justify-content-center">
        <%= f.submit class:"btn btn-primary btn-lg" %>
    </div>

<% end %>
</div>
<%=link_to '[ Return to Post listing page ]',posts_path %>
</div>
</div>