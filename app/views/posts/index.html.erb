<div class="page-content">
<h1 class="text-center mt-4"> Listing all the Posts </h1>

<div class="container">

<% @posts.each do|post| %>
    <div class="row justify-content-md-center">
    <div class="col-8 ">
<div id="accordion">
  <div class="card shadow mb-5 bg-white rounded">
    <div class="card-header text-center" id="headingOne">
      <h5 class="mb-0">
        <button class="btn btn-link font-weight-bold" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <%= post.title %>
        </button>
      </h5>
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body text-center">
            
            <div class="font-italic">
            <%= post.description %>
            </div>
            <div class="mt-4">
            <%= link_to 'View',post_path(post),class:"btn btn-outline-success"%>
            <%= link_to 'Edit',edit_post_path(post),class:"btn btn-outline-primary" %>
            <%= link_to 'Delete',post_path(post),class:"btn btn-outline-danger",method: :delete, data: {confirm:"Are you sure?"} %>
            </div>
      </div>
    </div>
  </div>
  </div>
  </div>
  </div>
<% end %>
</div>
</div>
