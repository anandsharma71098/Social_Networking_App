<div id="page-content">
    <% @user=User.find_by(id:@friend.receiver_id) %>
    <h1 class="text-center mt-4"><%=@user.email%></h1>
    <div class="container">
                <div class="row justify-content-md-center" >
                    
                    <div class="card" style="width: 18rem;">
                        <% if @user.avatar.attached? %>
                            <%= image_tag(@user.avatar_thumbnail) %>
                        <% else %>    
                            <%= image_tag("defualt.png", style:'width:30%') %>
                        <% end %> 
                        <div class="card-body">
                            <h5 class="card-title">From: <%=@user.email %></h5>


                            <%= form_with scope: :companion, url: companions_path, local: true do |f|%>
    
    
                                <div class="form-group row justify-content-center">
                                    <div class="form-group row">
                                        <div class="col-10">
                                            <%= f.number_field :user_id, id: :companion_user_id, class:"form-control", value: @friend.user_id, type: :hidden %>
                                        </div>   
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-10">
                                            <%= f.number_field :buddy, class:"form-control", value: @friend.receiver_id, type: :hidden %>
                                        </div>   
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-10">
                                            <%= f.number_field :dummy, class:"form-control", value: @friend.id, type: :hidden %>
                                        </div>   
                                    </div>
                                </div>
                              
                              
                                    <%= f.submit "Accept", class:"btn btn-outline-success" %>
                              
                            <% end %>



                            <br/>
                            <%= link_to "Decline", friend_path(@friend), class:"btn btn-outline-danger", method: :delete, data: {confirm:"Are you sure?"}  %>
                        </div>
                    </div>

                    </div>
                <br/>
    </div>
</div>